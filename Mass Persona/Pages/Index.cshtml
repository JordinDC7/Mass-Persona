    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <!-- Welcome Heading -->
            <h1 class="display-4 text-primary">Welcome to My MassPersona Coding Assessment!</h1>

            <!-- Divider -->
